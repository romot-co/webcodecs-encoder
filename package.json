{
  "name": "webcodecs-mp4-encoder",
  "version": "0.1.0",
  "description": "Encode video (H.264) and audio (AAC) using WebCodecs and mux into an MP4 container.",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.mjs"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts src/worker.ts --format esm,cjs --dts --sourcemap",
    "test": "vitest run --coverage",
    "lint": "eslint src/**/*.ts test/**/*.ts",
    "format": "prettier --write src/**/*.ts test/**/*.ts"
  },
  "keywords": [
    "webcodecs",
    "mp4",
    "aac",
    "h264",
    "encoder",
    "muxer",
    "video",
    "audio"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "mp4-muxer": "^2.0.2"
  },
  "devDependencies": {
    "@types/node": "^20.12.7",
    "@typescript-eslint/eslint-plugin": "^7.7.1",
    "@typescript-eslint/parser": "^7.7.1",
    "@vitest/coverage-v8": "^3.1.3",
    "eslint": "^8.57.0",
    "prettier": "^3.2.5",
    "tsup": "^8.0.2",
    "typescript": "^5.4.5",
    "vitest": "^3.1.3"
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=18.0.0"
  }
}
